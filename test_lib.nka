fn clear {
    while is_flag {
        --;
    }
}

fn step_for(val) {
    for [val] {
        step;
    }
}

fn fill {
    clear;
    
    for 8 {
        ++;
    }
}

fn set_value(val) {
    clear;

    for [val] {
        ++;
    }
}

// square for storing value must be empty
fn move_value {
    if is_flag {
        pick;
        recall;
        place;
    } else {
        commit;
    }
}

fn returning_to_wall {
    if not_wall {
        step;
        recall;
        step;
    } else {
        commit;
        
        // turn around to return back
        left; left;
    }
}